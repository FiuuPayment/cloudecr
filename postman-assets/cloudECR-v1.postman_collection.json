	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"pm.collectionVariables.set(\r",
					"  \"datetime\",\r",
					"  `const datetime = () => new Date().toISOString().replace(/\\\\D/g, '').substring(0, 14); datetime;`\r",
					");\r",
					"\r",
					"pm.collectionVariables.set('transData', `\r",
					"    const transData = () => {\r",
					"        const idx = Math.floor(Math.random() * 3)\r",
					"        const data = [\r",
					"            {\"paymentMethod\": \"qrCustScan\", \"paymentChannel\": \"TnG\"},\r",
					"            {\"paymentMethod\": \"qrMercScan\"},\r",
					"            {\"paymentMethod\": \"bankCard\"}\r",
					"        ]\r",
					"\r",
					"        return data[idx]\r",
					"    };\r",
					"    transData;\r",
					"`)\r",
					"\r",
					"pm.collectionVariables.set(\"signPayload\", `\r",
					"  const signPayload = (payload) => {\r",
					"    const CryptoJS = require(\"crypto-js\");  \r",
					"\r",
					"    const flattenObject = (object) => {\r",
					"      let result = [];\r",
					"      for (let key in object) {\r",
					"        if (typeof object[key] === 'object' && object[key] !== null)\r",
					"          result = result.concat(flattenObject(object[key]));\r",
					"        else result.push(object[key]);\r",
					"      }\r",
					"      return result;\r",
					"    };\r",
					"\r",
					"    const flattenedArray = flattenObject(payload);\r",
					"    const _payload = flattenedArray.sort().join('');\r",
					"\r",
					"    return CryptoJS.HmacSHA256(_payload, pm.collectionVariables.get(\"secretKey\")).toString(\r",
					"      CryptoJS.enc.Hex\r",
					"    );\r",
					"  };\r",
					"  signPayload;\r",
					"`);\r",
					"\r",
					"\r",
					"\r",
					""
				]
			}
		},
