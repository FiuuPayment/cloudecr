					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let response = pm.response.json();\r",
									"let formData = pm.request.body.urlencoded?.all();\r",
									"\r",
									"if (!formData) return\r",
									"\r",
									"let posId = formData.find(item => item.key === \"posId\")?.value;\r",
									"\r",
									"if (posId) {\r",
									"    pm.collectionVariables.set(\"posId\", posId);\r",
									"}\r",
									"\r",
									"if (response.access) {\r",
									"    pm.collectionVariables.set(\"authToken\", response.access.token);\r",
									"    pm.collectionVariables.set(\"refreshToken\", response.refresh.token);\r",
									"}"
								],
